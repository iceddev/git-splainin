{
  "manifest_version": 2,

  "name": "Git-Splainin",
  "description": "You've got some git-splanin' to do",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "pr.png",
    "default_title": "git-splainin: Git PR template"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/compare/*"],
      "js": ["fillPullBody.js"],
      "run_at": "document_end"
    }
  ]
}
