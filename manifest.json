{
  "manifest_version": 2,

  "name": "Git-Splainin",
  "description": "You've got some git-splainin' to do",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "img/pr.png",
    "default_title": "git-splainin: Git PR template",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "https://raw.githubusercontent.com/",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/compare/*"],
      "js": ["srs/fillPullBody.js"],
      "run_at": "document_end"
    }
  ]
}
